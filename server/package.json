    "express-fileupload": "^1.1.6",
    "helmet": "^3.21.2",
    "jimp": "^0.9.3",
    "rimraf": "^3.0.0",
    "typescript": "^3.7.4"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/express-fileupload": "^1.1.0",
    "@types/helmet": "^0.0.45",
    "@types/jimp": "^0.2.28",
    "nodemon": "^2.0.2",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1"
